<% layout('/layouts/boilerplate') %>
    <div class="row">
        <div class="col-8 offset-2">
            <h3 style="margin: 2rem 0 2rem 0;">Create a new listing</h3>
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title<sup>*</sup></label>
                    <input name="listing[title]" type="text" class="form-control" required />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please fill the required field!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description<sup>*</sup></label>
                    <textarea name="listing[description]" class="form-control" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please fill the required field!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input name="listing[image]" class="form-control" type="file" />
                    <div class="invalid-feedback">
                        Please fill the required field!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price<sup>*</sup></label>
                    <input name="listing[price]" class="form-control" type="number" required />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please fill the required field!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location<sup>*</sup></label>
                    <input name="listing[location]" class="form-control" type="text" required />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please fill the required field!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="country" class="form-label">Country<sup>*</sup></label>
                    <input name="listing[country]" class="form-control" type="text" required />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please fill the required field!
                    </div>
                </div>
                <br />
                <button class="btn btn-dark add-btn">Add Listing</button>
            </form>
        </div>
    </div>